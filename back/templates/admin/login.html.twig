<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">
    <title>login</title>
</head>
<body>
<center>
 <h3><b>Admin</b></h3>
    {% if app.user %}
    <script>window.location.href = "/"</script>
    {% endif %}
    {% if error %}
        {#{{ error.messageKey | trans(error.messagedata, 'security') }}#}
        <p>Admin invalid</p>
    {% endif %}
    <form action="" method="post">
        <table>
            <tr>
                <td><label for="username">Username</label></td><td><input type="text" name="_username" value="{{ last_username }}"></td>
            </tr>
            <tr>
                <td><label for="password">Password</label></td><td><input type="password" name="_password"></td>
            </tr>
            <tr>
                <td><input type="submit" value="Log in"></td>
            </tr>
        </table>
    </form>
</center>
</body>
</html>